{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CandidateWeightEngine Output",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "total_score": { "type": "number" },
      "selected": { "type": "boolean" },
      "scoring_breakdown": {
        "type": "object",
        "properties": {
          "virality": { "type": "number", "minimum": 0, "maximum": 10 },
          "feasibility": { "type": "number", "minimum": 0, "maximum": 10 },
          "trend_alignment": { "type": "number", "minimum": 0, "maximum": 10 }
        },
        "required": ["virality", "feasibility", "trend_alignment"]
      }
    },
    "required": ["id", "total_score", "selected", "scoring_breakdown"]
  }
}